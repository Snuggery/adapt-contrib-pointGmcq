<div class="point-gmcq-inner component-inner">
    {{> component this}}
    <div class="point-gmcq-widget component-widget clearfix {{#unless _isEnabled}} disabled {{#if _isComplete}} complete submitted user {{#if _isCorrect}}correct{{/if}} {{/if}} {{/unless}}">
        <img class="point-gmcq-image" src="{{_graphic.src}}" alt="{{_graphic.alt}}"/>
        {{#each _items}}
        <div class="point-gmcq-item item {{#unless ../_isEnabled}} {{#if _isCorrect}}correct{{else}}incorrect{{/if}} {{/unless}} item-{{@index}}" style="top:{{_top}}%; left:{{_left}}%;">
            <label for="{{../_id}}-{{@index}}" class="{{#if _isSelected}}selected{{/if}}">
                <div class="point-gmcq-item-state">
                    <div class="point-gmcq-item-icon point-gmcq-answer-icon icon"></div>
                    <div class="point-gmcq-item-icon point-gmcq-correct-icon icon icon-tick"></div>
                    <div class="point-gmcq-item-icon point-gmcq-incorrect-icon icon icon-cross"></div>
                </div>
            </label>
            <input type="checkbox" id="{{../_id}}-{{@index}}"/>
        </div>
        {{/each}}
        <div class="buttons">
            {{> buttons this}}
        </div>
    </div>
</div>
