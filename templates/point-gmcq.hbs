<div class="point-gmcq-inner component-inner">
    {{> component this}}
    <div class="point-gmcq-widget component-widget {{#unless _isEnabled}} disabled {{#if _isComplete}} complete submitted user {{#if _isCorrect}}correct{{/if}} {{/if}} {{/unless}}">
        <img class="point-gmcq-image" src="{{graphic.src}}" alt="{{graphic.alt}}"/>
        {{#each items}}
        <div class="point-gmcq-item item {{#unless ../_isEnabled}} {{#if _isCorrect}}correct{{else}}incorrect{{/if}} {{/unless}} item-{{@index}}" style="top:{{top}}%; left:{{left}}%;">
            <label for="{{../_id}}-{{@index}}" class="{{#if selected}}selected{{/if}}">
                <div class="point-gmcq-item-state">
                    <div class="point-gmcq-item-icon point-gmcq-answer-icon icon"></div>
                    <div class="point-gmcq-item-icon point-gmcq-correct-icon icon icon-tick"></div>
                    <div class="point-gmcq-item-icon point-gmcq-incorrect-icon icon icon-cross"></div>
                </div>
            </label>
            <input type="checkbox" id="{{../_id}}-{{@index}}"/>
        </div>
        {{/each}}
        <a href="#" class="button submit">
            <span>  
                {{{buttons.submit}}} 
            </span>
        </a>
        <a href="#" class="button reset">
            <span>
                {{{buttons.reset}}} 
            </span>
        </a> 
        <a href="#" class="button model">
            <span> 
                {{{buttons.showCorrectAnswer}}} 
            </span>
        </a>

        <a href="#" class="button user">
            <span>
                {{{buttons.hideCorrectAnswer}}} 
            </span>
        </a>
    </div>
</div>
